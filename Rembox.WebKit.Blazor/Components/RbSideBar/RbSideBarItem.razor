@using Rembox.WebKit.Blazor.Core
@* ReSharper disable once CheckNamespace *@
@namespace Rembox.WebKit.Blazor.Components

<div class="@CssBuilder.CssClasses( "parent-container", IsActive ? "active" : "" )">
    <div class="@CssBuilder.CssClasses("item", Context.IsExpanded ? "expanded" : "")" onclick="@OnItemClicked">
        <RbIcon Name="@Icon"/>
        <div class="title">@Title</div>
        @if (!string.IsNullOrEmpty(Badge) && Context.IsExpanded)
        {
            <RbBadge Color="BadgeSeverity" Size="10">@Badge</RbBadge>
        }
    </div>
    @if (ChildContent != null && Context.IsExpanded)
    {
        <div class="@CssBuilder.CssClasses("sub-items-list", IsActive && Context.IsExpanded ? "active" : "")">
            @ChildContent
        </div>
    }
</div>